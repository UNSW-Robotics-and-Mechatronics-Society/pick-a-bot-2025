{
  "name": "pick-a-bots-database",
  "scripts": {
    "db:apply-policies": "dotenv -e .env -- sh -c 'psql \"$DATABASE_URL\" -f supabase/policies.sql'",
    "db:push": "npx drizzle-kit push --config ./drizzle.config.ts",
    "db:generate": "npx drizzle-kit generate --config ./drizzle.config.ts",
    "db:migrate": "npx drizzle-kit migrate --config ./drizzle.config.ts",
    "db:drop": "npx drizzle-kit drop --config ./drizzle.config.ts",
    "start": "tsx src/index.ts"
  },
  "dependencies": {
    "@types/node": "^24.0.10",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.44.2",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.3"
  }
}
